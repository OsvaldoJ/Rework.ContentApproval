@model ApprovalResponseViewModel

<style asp-src="~/Rework.ContentApproval/Styles/content-approval.min.css" debug-src="~/Rework.ContentApproval/Styles/content-approval.css"></style>

<div class="btn-group btn-group-approval">
    <span class="status">Status: @Model.Status</span>
    <input asp-for="Notes" type="text" class="form-control content-preview-select" placeholder="Note (optional)" />
    <button class="publish-button btn btn-success btn-content-approval" type="submit" name="submit.Publish" value="submit.Approved">@T[$"{Settings.ContentApproved} - Publish"]</button>
    <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-reference="parent" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">@T["Toggle Dropdown"]</span>
    </button>
    <div class="dropdown-menu">
        <button class="dropdown-item" type="submit" name="submit.Save" value="submit.NeedsRevised">@T[$"{Settings.ContentNeedsRevised} - Save Draft"]</button>
        <button class="dropdown-item" type="submit" name="submit.Save" value="submit.Rejected">@T[$"{Settings.ContentRejected} - Save Draft"]</button>
    </div>
</div>